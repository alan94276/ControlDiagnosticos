<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".AboutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    app:srcCompat="@drawable/servicio" />

                <TextView
                    android:id="@+id/tvTituloContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Quiénes Somos?"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvCuerpoContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Añadir Info"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvTituloContacto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Misión"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvCuerpoNosotros2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proporcionar servicios de mecánica en general de alta calidad y confiabilidad a nuestros clientes, ofreciendo soluciones efectivas para el mantenimiento, reparación y diagnóstico de vehículos. Nos comprometemos a brindar un servicio personalizado, transparente y ético, asegurando la satisfacción total de nuestros clientes y contribuyendo al óptimo rendimiento y seguridad de sus vehículos."
                    android:textAlignment="textStart"
                    android:textColor="@color/lavender"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvMision2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visión"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvCuerpoNosotros3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ser reconocidos como el taller mecánico líder en nuestra comunidad, destacando por nuestra excelencia en el servicio, profesionalismo y atención al cliente. Buscamos expandir nuestras operaciones y servicios para convertirnos en una referencia en el sector de la mecánica en general, ofreciendo soluciones innovadoras y tecnológicas. Nuestro compromiso es mantenernos actualizados en las últimas tecnologías y tendencias del sector automotriz, para seguir brindando un servicio de vanguardia y ser el taller de preferencia de nuestros clientes."
                    android:textAlignment="textStart"
                    android:textColor="@color/lavender"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity= "start">

        <include
            layout="@layout/nav_drawer"/>


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>